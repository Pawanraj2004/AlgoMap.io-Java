class Solution {
    public int findClosestNumber(int[] nums) {
        int min=nums[0];
        for(int i:nums){
            if(Math.abs(min)>Math.abs(i)){
                min=i;
            }
            else if(Math.abs(i)==Math.abs(min)){
                min=Math.max(i,min);
            }
        }
        return min;
    }
}
